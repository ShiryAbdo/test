<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/smoke_chimney_industrial_29465_copy_2"
    tools:context="com.example.shaymaa.uicompany.activites.loginUser">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="323dp"
        android:layout_height="57dp"
        android:src="@drawable/logo_first_page"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />


    <LinearLayout
        android:layout_width="336dp"
        android:layout_height="59dp"

        android:background="@drawable/rounded_border_edittext"
        android:weightSum="8"
         android:layout_marginRight="8dp"
         android:layout_marginLeft="8dp"
         android:id="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.405">


        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="7"
             android:ems="10"
            android:inputType="textPassword"
            android:hint=" كلمة المرور                    " />


        <ImageView
            android:id="@+id/passwordImage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_mail_outline_black_24dp"
            tools:layout_editor_absoluteY="189dp"
            android:layout_gravity="center"

            app:layout_constraintRight_toRightOf="parent" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="336dp"
        android:layout_height="59dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/rounded_border_edittext"
        android:weightSum="8"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintHorizontal_bias="0.369"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">


        <EditText
            android:id="@+id/editText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="7"
            android:ems="10"
            android:hint="البريد الإلكتروني "
            android:inputType="textEmailAddress" />


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/ic_mail_outline_black_24dp"

            tools:layout_editor_absoluteY="189dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="336dp"


        android:layout_height="59dp"
        android:layout_marginLeft="49dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="-8dp"
        android:orientation="horizontal"
        android:weightSum="8"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">


        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="كفرد" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1" />


        <TextView
            android:id="@+id/textViw2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.5" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3.5"
            android:text="كمؤسسة" />


        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="336dp"
        android:layout_height="59dp"


        android:layout_marginTop="0dp"
        android:background="@drawable/rounded_border_edittext"
        android:weightSum="8"
        app:layout_constraintHorizontal_bias="0.385"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">


        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/buttonbackground"
            android:text="الدخول" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayot2"
        android:layout_width="336dp"


        android:layout_height="59dp"

         android:orientation="horizontal"
        android:weightSum="8"
        tools:layout_editor_absoluteY="406dp"
        tools:layout_editor_absoluteX="49dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_width="match_parent"
             android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="هل نسيت كلمه  المرور" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/inearLayot2"
        android:layout_width="347dp"
        android:layout_height="28dp"
        android:orientation="horizontal"
        android:weightSum="8"
        app:layout_constraintHorizontal_bias="0.405"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="465dp">


        <TextView
            android:id="@+id/textVew3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="3"
            android:text=" أنشئ حساب "
            android:textAlignment="textStart"
             android:textSize="20sp" />

        <TextView
            android:id="@+id/textVe3"
            android:padding="0dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="5"
            android:text="أذا كنت  مستخدم جديد"
            android:textAlignment="textStart"
            android:textSize="25sp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
