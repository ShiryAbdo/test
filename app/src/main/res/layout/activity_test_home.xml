<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="4"
        android:background="@drawable/bg_first_page">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.75"
            app:srcCompat="@drawable/logo_first_page"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:padding="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"

            >

            <LinearLayout
                android:id="@+id/layou_prodectes"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:background="@drawable/back3"
                app:srcCompat="@drawable/factory"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:orientation="vertical" >


                <ImageButton
                    android:id="@+id/productesImage"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/back3"
                    android:src="@drawable/industrial_robot"
                    android:adjustViewBounds="true"

                    android:scaleType="fitCenter"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back3"
                    android:textColor="#ffffff"
                    android:padding="5dp"
                    android:text="المنتجات"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutFactory"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:padding="20dp"
                android:background="@drawable/back"

                app:srcCompat="@drawable/factory"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:orientation="vertical" >


                <ImageButton
                    android:id="@+id/imageFactory"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                     android:layout_weight="1"
                    android:background="@drawable/back"
                     android:src="@drawable/factory"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:text=" المصانع السعودية"
                    />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:orientation="horizontal"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/layot_regist_ind"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:padding="20dp"
                android:background="@drawable/bac2"
                app:srcCompat="@drawable/factory"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:orientation="vertical" >


                <ImageButton
                    android:id="@+id/imageRegistration"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/bac2"
                    android:src="@drawable/man1"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:textSize="20sp"
                    android:background="@drawable/bac2"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:text= "التسجيل كفرد"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/imageButton6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:padding="20dp"
                android:background="@drawable/back"

                app:srcCompat="@drawable/factory"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:orientation="vertical" >


                <ImageButton
                    android:id="@+id/imageButto5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/back"
                    android:src="@drawable/factory"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:text=" المصانع السعودية"
                    />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/imageButton6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:padding="20dp"
                android:background="@drawable/back"

                app:srcCompat="@drawable/factory"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:orientation="vertical" >


                <ImageButton
                    android:id="@+id/imageButto5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/back"
                    android:src="@drawable/factory"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:text=" المصانع السعودية"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/imageButton6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:padding="20dp"
                android:background="@drawable/back"

                app:srcCompat="@drawable/factory"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:orientation="vertical" >


                <ImageButton
                    android:id="@+id/imageButto5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/back"
                    android:src="@drawable/factory"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:text=" المصانع السعودية"
                    />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
