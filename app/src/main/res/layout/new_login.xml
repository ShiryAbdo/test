<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/smoke_chimney_industrial_29465_copy_2"
    android:layout_height="match_parent">



    <LinearLayout
        android:background="#6bffffff"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_gravity="center"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_50sdp"
            android:id="@+id/imageView"
            android:background="@drawable/logo_first_page"
            />
        <TextView
             android:layout_gravity="center"
            android:textSize="18sp"
             android:layout_width="@dimen/_240sdp"
            android:layout_height="@dimen/_35sdp" />

        <EditText
            android:background="@drawable/fild_redise"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_gravity="center"
            android:drawablePadding="@dimen/_15sdp"
            android:padding="@dimen/_5sdp"
            android:layout_width="@dimen/_240sdp"
            android:layout_height="@dimen/_35sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:paddingTop="@dimen/_10sdp"
            android:hint="البريد الالكترونى"
             android:ems="10"
            android:drawableRight="@drawable/ic_mail_outline_black_24dp"
            android:id="@+id/editText"

            />

        <EditText
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_gravity="center"
            android:layout_width="@dimen/_240sdp"
            android:layout_height="@dimen/_35sdp"
            android:padding="@dimen/_5sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:drawablePadding="@dimen/_15sdp"
            android:paddingTop="@dimen/_10sdp"
            android:background="@drawable/fild_redise"
            android:drawableRight="@drawable/ic_lock_outline_white_24dp"
            android:hint="تاكيد كلمه المرور"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editText2" />

        <LinearLayout
             android:layout_marginBottom="@dimen/_10sdp"
            android:layout_gravity="center"
            android:layout_width="@dimen/_240sdp"
            android:layout_height="@dimen/_35sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:paddingTop="@dimen/_10sdp"
            android:id="@+id/editText3"
            android:orientation="horizontal" >

            <CheckBox
                android:text="كمؤسسة"
                android:layoutDirection="rtl"
                android:id="@+id/moasa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1" />





            <CheckBox
                android:text="كفرد"
                android:layoutDirection="rtl"
                android:id="@+id/singelCheckBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="2.5" />


        </LinearLayout>

        <Button
            android:textColor="#ffffff"
            android:background="@drawable/login_btn"
            android:layout_gravity="center"
            android:text="التسجيل "
            android:textSize="20sp"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="@dimen/_35sdp"
            android:id="@+id/button2" />

        <TextView
            android:gravity="right"
            android:textAlignment="center"
            android:hint="هل نسيت  كلمه المرور"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_gravity="center"
            android:layout_width="@dimen/_240sdp"
            android:layout_height="@dimen/_25sdp"
            android:paddingBottom="@dimen/_5sdp"
             android:paddingTop="@dimen/_5sdp"
            android:id="@+id/forgetpassword" />

        <LinearLayout
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_gravity="center"
            android:layout_width="@dimen/_240sdp"
            android:layout_height="@dimen/_35sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:orientation="horizontal" >

            <TextView
                android:supportsRtl="true"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="#2f448c"
                android:hint="إذاكنت مستخدم جديد"
                android:layout_gravity="center"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_25sdp" />
            <TextView
                android:gravity="center"
                android:textAlignment="center"
                android:hint="أنشئ حساب"
                android:textColor="#2f448c"
                android:padding="0dp"
                android:id="@+id/acount_new"
                 android:layout_gravity="center"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_25sdp"
                />


         </LinearLayout>






    </LinearLayout>
</LinearLayout>