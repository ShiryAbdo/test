<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/smoke_chimney_industrial_29465_copy_2"
    tools:context="com.example.shaymaa.uicompany.activites.ui">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="334dp"
        android:layout_height="63dp"
         app:srcCompat="@drawable/logo_first_page"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="33dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <!--email-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:background="@drawable/rounded_border_edittext"
        android:weightSum="8"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="167dp"
        android:layout_marginRight="8dp"
        android:id="@+id/linearLayout"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.504">




        <ImageView
            android:padding="10dp"
            android:id="@+id/imagemail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/ic_mail_outline_black_24dp" />


        <EditText
            android:id="@+id/email"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="7"
            android:padding="8dp"
            android:background="#00efefef"
            android:ems="10"
            android:gravity="center"
            android:hint="البريد الإلكتروني "
            android:inputType="textEmailAddress"
            android:textAlignment="textStart" />

    </LinearLayout>

<!--password-->

    <LinearLayout
        android:layout_width="266dp"
        android:layout_height="45dp"

        android:background="@drawable/rounded_border_edittext"
        android:weightSum="8"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/linearLayout2"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="246dp"
        app:layout_constraintBottom_toBottomOf="parent">


        <ImageView
            android:padding="10dp"
            android:id="@+id/imagpassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/ic_lock_outline_white_24dp"
            />

        <EditText
            android:id="@+id/paspassword"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="7"
            android:padding="8dp"
            android:background="#00efefef"
            android:ems="10"
            android:hint="الباسورد"
            android:inputType="textPassword"
            android:textAlignment="textEnd" />


    </LinearLayout>

    <!--chose -->
    <LinearLayout
        android:layout_width="267dp"
        android:layout_height="49dp"
        android:orientation="horizontal"
        android:weightSum="8"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="265dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/linearLayout3"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintVertical_bias="0.0">



        <CheckBox
            android:id="@+id/moasa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:layout_gravity="center"
            android:padding="0dp"
            android:layout_weight="1.5"
            android:text="كمؤسسة" />
        <TextView
            android:id="@+id/textViw2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3.5" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1" />

        <TextView
            android:textAlignment="textStart"
            android:layout_gravity="center"
            android:id="@+id/textView"
            android:padding="0dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="كفرد" />










    </LinearLayout>


    <!-- button enter-->
    <LinearLayout
        android:layout_width="272dp"
        android:layout_height="51dp"
        android:background="@drawable/rounded_border_edittext"
        android:weightSum="8"
        android:layout_marginTop="314dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/linearLayout4"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0.541">


        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/buttonbackground"
            android:text="الدخول" />
    </LinearLayout>

    <!--forgetpassword-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:weightSum="8"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="376dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:id="@+id/linearLayout5"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="0dp"
            android:text="هل نسيت كلمه  المرور"
            android:textAlignment="center" />

        <View
            android:layout_width="wrap_content"
            android:layout_marginRight="110dp"
            android:layout_marginLeft="110dp"
            android:paddingTop="0dp"
            android:paddingRight="90dp"
            android:layout_height="1dp"
            android:background="#454444"
            />

    </LinearLayout>


    <!--creat acount-->

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="288dp"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="394dp"
        android:layout_weight=".5"
        android:weightSum="8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0">


        <TextView
            android:id="@+id/textVe3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:padding="0dp"
            android:text="أذا كنت  مستخدم جديد"
            android:textAlignment="textStart"
            android:textColor="#1a1dc1"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textVew3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:text=" أنشئ حساب "
            android:textAlignment="textEnd"
            android:textColor="#1a1dc1"
            android:textSize="20sp" />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
