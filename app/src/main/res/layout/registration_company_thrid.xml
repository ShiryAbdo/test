<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/smoke_chimney_industrial_29465_copy_2"
    tools:context="com.example.shaymaa.uicompany.activites.registrationUser">


    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_marginTop="@dimen/_13sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_gravity="center"
            android:layout_width="@dimen/_50sdp"
            android:padding="@dimen/_5sdp"
            android:layout_height="@dimen/_40sdp"
            android:id="@+id/imageView"
            android:background="@drawable/storage_copy"
            />
        <TextView
            android:textColor="#01048e"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:text="تسجيل  الشركات والمؤسسات "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginRight="@dimen/_35sdp"
            android:layout_gravity="right"
            android:textColor="#ffffff"
            android:textSize="14sp"
             android:paddingRight="@dimen/_10sdp"
             android:textStyle="bold"
            android:text="الموافقه على سياسه استخدام الاعلان والعموله "
            android:layoutDirection="rtl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="@dimen/_240sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/fild_redise"
            android:drawablePadding="@dimen/_15sdp"
            android:drawableRight="@drawable/ic_person_outline_white_24dp"
            android:ems="10"
            android:hint="رقم الفاكس"
            android:inputType="number"
            android:paddingRight="@dimen/_10sdp"

            />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="@dimen/_240sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/fild_redise"
            android:drawablePadding="@dimen/_15sdp"
            android:drawableRight="@drawable/ic_mail_outline_black_24dp"
            android:ems="10"
            android:hint="الموقغ الإلكتروني"
            android:inputType="text"
            android:paddingRight="@dimen/_10sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:paddingTop="@dimen/_8sdp" />

        <EditText
            android:hint="رقم الجوال"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_gravity="center"
            android:layout_width="@dimen/_240sdp"
            android:paddingRight="@dimen/_10sdp"
             android:layout_height="@dimen/_30sdp"
             android:drawablePadding="@dimen/_15sdp"
            android:background="@drawable/fild_redise"
            android:drawableRight="@drawable/ic_phone_android_black_24dp"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/editText3" />

        <Spinner
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_gravity="center"
            android:paddingRight="@dimen/_10sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_width="@dimen/_240sdp"
             android:paddingBottom="@dimen/_8sdp"
            android:padding="@dimen/_10sdp"
            android:paddingTop="@dimen/_8sdp"
            android:background="@drawable/fild_redise"


            android:id="@+id/spinner" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="@dimen/_240sdp"
             android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/fild_redise"
            android:drawablePadding="@dimen/_15sdp"
            android:paddingRight="@dimen/_10sdp"
            android:layout_height="@dimen/_30sdp"
            android:drawableRight="@drawable/ic_lock_outline_white_24dp"
            android:ems="10"
            android:gravity="right"
            android:hint="رقم السجل التجاري"
            android:inputType="number"
             android:paddingBottom="@dimen/_7sdp"
            android:paddingTop="@dimen/_5sdp" />

        <EditText
            android:id="@+id/editText5"
            android:paddingRight="@dimen/_10sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_width="@dimen/_240sdp"
             android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/round_white"
            android:drawablePadding="@dimen/_15sdp"
            android:drawableRight="@drawable/ic_lock_outline_white_24dp"
            android:ems="10"
            android:gravity="right"
            android:hint= "كلمة المرور"
            android:inputType="textPassword"
             android:paddingBottom="@dimen/_8sdp"
            android:paddingTop="@dimen/_8sdp"
            android:textColor="#fff"
            android:textColorHint="#fff" />

        <EditText
            android:paddingRight="@dimen/_10sdp"
            android:layout_height="@dimen/_30sdp"
            android:id="@+id/re_password"
            android:layout_width="@dimen/_240sdp"
             android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/round_white"
            android:drawablePadding="@dimen/_15sdp"
            android:drawableRight="@drawable/ic_lock_outline_white_24dp"
            android:ems="10"
            android:gravity="right"
            android:hint= " إعادة كلمة المرور"
            android:inputType="textPassword"
             android:paddingBottom="@dimen/_8sdp"
            android:paddingTop="@dimen/_8sdp"
            android:textColor="#fff"
            android:textColorHint="#fff" />



        <Button
            android:paddingRight="@dimen/_10sdp"
            android:layout_height="@dimen/_30sdp"
            android:textColor="#ffffff"
            android:background="@drawable/login_btn"
            android:layout_gravity="center"
            android:text="أكمل التسجيل "
            android:textSize="20sp"
            android:layout_width="@dimen/_220sdp"
             android:id="@+id/button2" />


    </LinearLayout>
</LinearLayout>

