<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/smoke_chimney_industrial_29465_copy_2"
    tools:context="com.example.shaymaa.uicompany.activites.registrationUser">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"

            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_13sdp"
            android:background="@drawable/storage_copy"
            android:padding="@dimen/_5sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="تسجيل  الشركات والمؤسسات "
            android:textColor="#01048e"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_35sdp"
            android:layoutDirection="rtl"
            android:paddingRight="@dimen/_10sdp"
            android:text="الموافقه على سياسه استخدام الاعلان والعموله "
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="@dimen/_240sdp"
            android:layout_height="@dimen/_37sdp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/fild_redise"
            android:drawablePadding="@dimen/_15sdp"
            android:drawableRight="@drawable/ic_person_outline_white_24dp"
            android:ems="10"
            android:hint="رقم الفاكس"
            android:inputType="number"
            android:paddingRight="@dimen/_10sdp"

            />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="@dimen/_240sdp"
            android:layout_height="@dimen/_37sdp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/fild_redise"
            android:drawablePadding="@dimen/_15sdp"
            android:drawableRight="@drawable/ic_mail_outline_black_24dp"
            android:ems="10"
            android:hint="الموقغ الإلكتروني"
            android:inputType="text"
            android:paddingBottom="@dimen/_8sdp"
            android:paddingRight="@dimen/_10sdp"
            android:paddingTop="@dimen/_8sdp" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="@dimen/_240sdp"
            android:layout_height="@dimen/_37sdp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/fild_redise"
            android:drawablePadding="@dimen/_15sdp"
            android:drawableRight="@drawable/ic_phone_android_black_24dp"
            android:ems="10"
            android:hint="رقم الجوال"
            android:inputType="phone"
            android:paddingRight="@dimen/_10sdp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="@dimen/_240sdp"
            android:layout_height="@dimen/_37sdp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/fild_redise"
            android:padding="@dimen/_10sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:paddingRight="@dimen/_10sdp"


            android:paddingTop="@dimen/_8sdp" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="@dimen/_240sdp"
            android:layout_height="@dimen/_37sdp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/fild_redise"
            android:drawablePadding="@dimen/_15sdp"
            android:drawableRight="@drawable/ic_lock_outline_white_24dp"
            android:ems="10"
            android:gravity="right"
            android:hint="رقم السجل التجاري"
            android:inputType="number"
            android:paddingBottom="@dimen/_7sdp"
            android:paddingRight="@dimen/_10sdp"
            android:paddingTop="@dimen/_5sdp" />

        <EditText
            android:id="@+id/editText5"
            android:layout_width="@dimen/_240sdp"
            android:layout_height="@dimen/_37sdp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/round_white"
            android:drawablePadding="@dimen/_15sdp"
            android:drawableRight="@drawable/ic_lock_outline_white_24dp"
            android:ems="10"
            android:gravity="right"
            android:hint="كلمة المرور"
            android:inputType="textPassword"
            android:paddingBottom="@dimen/_8sdp"
            android:paddingRight="@dimen/_10sdp"
            android:paddingTop="@dimen/_8sdp"
            android:textColor="#fff"
            android:textColorHint="#fff" />

        <EditText
            android:id="@+id/re_password"
            android:layout_width="@dimen/_240sdp"
            android:layout_height="@dimen/_37sdp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/round_white"
            android:drawablePadding="@dimen/_15sdp"
            android:drawableRight="@drawable/ic_lock_outline_white_24dp"
            android:ems="10"
            android:gravity="right"
            android:hint=" إعادة كلمة المرور"
            android:inputType="textPassword"
            android:paddingBottom="@dimen/_8sdp"
            android:paddingRight="@dimen/_10sdp"
            android:paddingTop="@dimen/_8sdp"
            android:textColor="#fff"
            android:textColorHint="#fff" />


        <Button
            android:id="@+id/button2"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="@dimen/_37sdp"
            android:layout_gravity="center"
            android:background="@drawable/login_btn"
            android:paddingRight="@dimen/_10sdp"
            android:text="أكمل التسجيل "
            android:textColor="#ffffff"
            android:textSize="20sp" />


    </LinearLayout>
</LinearLayout>

